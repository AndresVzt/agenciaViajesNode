extends ./layout/index

block contenido 
    
    main.container.mt-5
        h1(class="text-center mt-5") #{pagina}
        blockquote.text-center Lee sobre las experiencias de nuestros clientes 
        include ./layout/bloque_testimoniales
        .row 
            h2.d-block.w-100.text-center Agrega un testimonial
            
                                
            .row.justify-content-center.col 
                .col-md-8
                    form(action="/testimoniales", method="post") 
                        .form-group 
                            
                            
                            if(errores)
                                each error in errores
                                    if(error.nombre) 
                                        .alert.col.alert-danger.text-center= error.nombre
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder='Tu nombre',name = "nombre" class="form-control", value = nombre)
                        .form-group 
                             
                            if(errores)
                                each error in errores
                                    if(error.email) 
                                        .alert.col.alert-danger.text-center= error.email
                            label(for="email") Email
                            input#email(type="text", placeholder='usuario@email.com',name = "email" class="form-control", value = email)
                        .form-group 
                            
                            if(errores)
                                each error in errores
                                    if(error.mensaje) 
                                        .alert.col.alert-danger.text-center= error.mensaje
                            label(for="nombre") Mensaje
                            textarea#mensaje(name="mensaje", cols="10", rows="10",class="form-control")=mensaje
                        input.btn.btn-success.btn-block(type="submit") 
            